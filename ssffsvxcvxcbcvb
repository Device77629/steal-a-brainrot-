    const reviews=[];
    for(let i=0;i<320;i++){
      const name=firstNames[Math.floor(Math.random()*firstNames.length)]+Math.floor(Math.random()*99);
      const text=phrases[Math.floor(Math.random()*phrases.length)]+' '+endings[Math.floor(Math.random()*endings.length)];
      const time=Math.floor(Math.random()*100)+' –¥. –Ω–∞–∑–∞–¥';
      reviews.push({name,text,time});
    }

    const container=document.getElementById('reviews');
    const total=document.getElementById('total');
    const shownEl=document.getElementById('shown');

    let shown=0;const page=24;

    function escapeHtml(s){return s.replace(/[&<>"']/g,m=>({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;'}[m]));}

    function render(){
      const slice=reviews.slice(shown,shown+page);
      slice.forEach(r=>{
        const c=document.createElement('div');
        c.className='card';
        c.innerHTML=`<div class='meta'><span class='name'>${escapeHtml(r.name)}</span> ¬∑ ${r.time}</div><div class='text'>${escapeHtml(r.text)}</div>`;
        container.appendChild(c);
      });
      shown+=slice.length;shownEl.textContent=shown;total.textContent=reviews.length;
      if(shown>=reviews.length)document.getElementById('loadMore').disabled=true;
    }

    document.getElementById('loadMore').onclick=()=>render();
    document.getElementById('shuffle').onclick=()=>{reviews.sort(()=>Math.random()-.5);container.innerHTML='';shown=0;render();};
    document.getElementById('search').oninput=e=>{
      const q=e.target.value.toLowerCase();
      container.innerHTML='';shown=0;
      const filtered=revta'><span class='name'>${escapeHtml(r.name)}</span> ¬∑ ${r.time}</div><div class='text'>${escapeHtml(r.text)}</div>`;
